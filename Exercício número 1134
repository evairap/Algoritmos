programa {
funcao inicio(){
		inteiro codigo
		inteiro qtdAlcool, qtdGasolina, qtdDiesel

		qtdAlcool = 0
		qtdGasolina = 0
		qtdDiesel = 0
		faca{
			escreva("Qual o combustivel?")
			leia(codigo)
			se (codigo ==1){
				qtdAlcool++
				escreva("escolheu Alcool\n")
			}
			senao se (codigo ==2){
				escreva("escolheu Gasolina\n")
				qtdGasolina++
			}
			senao se (codigo ==3){
				escreva("escolheu Diesel")
				qtdDiesel++
			}
			
		}  enquanto(codigo != 4) 

		escreva("MUITO OBRIGADO")
		escreva("Alcool: ",qtdAlcool,"\n")
		escreva("Gasolina: ",qtdGasolina,"\n")
		escreva("Diesel: ",qtdDiesel,"\n")
	}
}
